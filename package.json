{
    "name": "theiris",
    "version": "1.0.0",
    "description": "a remote control tool",
    "main": "app/main/index.js",
    "scripts": {
        "build": "cd app/renderer/src/main && npm run build",
        "start:main": "./node_modules/.bin/electron .",
        "start:render": "cd app/renderer/src/main && npm start",
        "start": "concurrently 'npm run start:render' 'wait-on http://localhost:3000 && npm run start:main'",
        "pack:mac": "npm run build && electron-builder build --mac",
        "pack:win": "npm run build && electron-builder build --win --ia32",
        "postinstall": "electron-build install-app-deps"
    },
    "keywords": [
        "electron",
        "nodejs",
        "webrtc",
        "remote"
    ],
    "author": "zengxingqi",
    "license": "GPL3.0",
    "devDependencies": {
        "concurrently": "^5.1.0",
        "cross-env": "^7.0.2",
        "customize-cra": "^0.9.1",
        "electron": "^7.1.14",
        "electron-builder": "^22.4.1",
        "electron-builder-squirrel-windows": "^22.4.1",
        "react-app-rewired": "^2.1.5",
        "wait-on": "^4.0.1"
    },
    "dependencies": {
        "about-window": "^1.13.2",
        "electron-is-dev": "^1.1.0",
        "electron-squirrel-startup": "^1.0.0",
        "robotjs": "^0.6.0",
        "vkey": "^1.0.1",
        "ws": "^7.2.3"
    },
    "build": {
        "appId": "com.themages.theiris",
        "productName": "theiris",
        "files": "app",
        "asar": true,
        "extraFiles": [
            "app/renderer/**/src"
        ],
        "directories": {
            "buildResources": "resource",
            "output": "release"
        },
        "copyright": "Copyright Â© 2020 theiris",
        "mac": {
            "target": [
                "dmg",
                "zip"
            ],
            "icon": "resource/icon.icns"
        },
        "dmg": {
            "background": "resource/background.png",
            "window": {
                "width": 540,
                "height": 380
            },
            "contents": [
                {
                    "x": 410,
                    "y": 180,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 180,
                    "type": "file"
                }
            ],
            "iconSize": 128
        },
        "win": {
            "icon": "resource/icon.ico",
            "target": [
                "squirrel",
                "nsis"
            ]
        },
        "nsis": {
            "oneClick": false,
            "language": "2052",
            "perMachine": true,
            "allowToChangeInstallationDirectory": true
        },
        "squirrelWindows": {
            "iconUrl": "https://raw.githubusercontent.com/dengyaolong/geektime-electron/master/img/icon.ico"
        }
    }
}
